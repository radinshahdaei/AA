<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.LoginMenuController"
            prefHeight="200" prefWidth="400.0">
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Welcome to AA!"/>
            <TextField promptText="username" styleClass="text-input" maxWidth="300" fx:id="username"/>
            <PasswordField promptText="password" styleClass="text-input" maxWidth="300"  fx:id="password"/>
            <HBox alignment="CENTER" spacing="5">
                <Button text="Register" onMouseClicked="#register"/>
                <Button text="Login" onMouseClicked="#login"/>
                <Button text="Guest" onMouseClicked="#guest"/>
                <Button text="Exit Game" onMouseClicked="#exit"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
