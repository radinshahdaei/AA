<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.GameMenuController"
            prefHeight="200.0" prefWidth="300.0">
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Button text="Start new Game" minWidth="100" onMouseClicked="#startGame"/>
            <Button text="Load Game" minWidth="100" onMouseClicked="#loadGame"/>
            <Button text="Back" minWidth="100" onMouseClicked="#exit"/>
            <HBox alignment="CENTER" spacing="15">
                <Button text="Profile" minWidth="50" onMouseClicked="#profile"/>
                <Button text="High Scores" minWidth="50" onMouseClicked="#highScores"/>
                <Button text="Settings" minWidth="50" onMouseClicked="#settings"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
